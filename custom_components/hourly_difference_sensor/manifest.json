{
  "domain": "hourly_difference_sensor",
  "name": "Hourly Difference Sensor",
  "version": "1.0.0",
  "documentation": "https://github.com/retorquere/home-assistant-helper",
  "requirements": [],
  "dependencies": [],
  "codeowners": ["@retorquere"],
  "iot_class": "local_polling",
  "config_flow": true,
  "icon": "mdi:stopwatch",
  "options": {
    "sensors": {
      "type": "multi_select",
      "required": true,
      "selector": {
        "entity": {
          "domain": "sensor",
          "multiple": true
        }
      },
      "min": 1,
      "description": "Select one or more source sensors to sum."
    },
    "scan_interval_minutes": {
      "type": "number",
      "required": true,
      "default": 60,
      "min": 1,
      "description": "Scan interval in minutes"
    }
  }
}